#version 460 core

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

struct Particle
{
    float lifetime;
    bool alive;

    vec2 offset;
    vec2 velocity;
    vec4 color;
};

uniform int particleCount;

layout(std430, binding = 0) buffer Particles
{
    Particle particles[];
};

void main()
{
    const uint id = gl_GlobalInvocationID.x;
    particles[id].alive = 1;
}
